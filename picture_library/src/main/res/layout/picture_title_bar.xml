<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_picture_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/picture.toolbar.bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/picture_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:tint="?attr/picture.toolbar.textColor"
            android:padding="15dp"
            android:src="?attr/picture.leftBack.icon" />

        <LinearLayout
            android:id="@+id/picture_title_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/picture_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="11"
                android:padding="6dp"
                android:text="@string/picture_camera_roll"
                android:textColor="?picture.toolbar.textColor"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/picture_title_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/picture.arrow_down.icon"
                android:tint="?attr/picture.toolbar.textColor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/picture_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/picture_confirm"
            android:textColor="?picture.toolbar.textColor"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/picture_tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/picture_confirm"
            android:textColor="?attr/picture.complete.textColor"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />
</LinearLayout>

